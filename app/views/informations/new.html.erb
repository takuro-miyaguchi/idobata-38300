<div class="contents row">
  <div class="information_new">
    <h1>
      <%= link_to root_path do %>
        <%= image_tag "idobata.png", class:"info-img" %>
      <% end %>
    </h1>
    <h2>新規投稿</h2>
    <%= form_with(model: @information, url: informations_path,local: true, class:"info") do |f|%>

      <div class="title">
        <%= f.label :title, "タイトル" %><br /><span class="indispensable">必須</span>
        <%= f.text_field :title, placeholder: "例：○○病院、□□幼稚園", class: "info info-title" %>
      </div>

      <div class="category">
        <%= f.label :category, "カテゴリー" %><br />
        <%= f.select :category, options_for_select(Information.categories), {prompt: "---"}, class: "info info-category"%>
      </div>

      <div class="image">
        <%= f.label :images, "参考画像" %><br />
        <%= f.file_field :images, multiple: true, class: "info info-image" %>
      </div>

      <div class="text">
        <%= f.label :text, "情報内容" %><br />
        <%= f.text_area :text, rows: 10, value: "【HPのURL】

【スケジュール】

【〇〇費】

【良いところ】

【おすすめ】

        ", class: "info info-text" %>
      </div>

      <div class="btn">
        <%= f.submit "投稿する", class: "info info-btn"%>
      </div>
    <% end %>
  </div>
</div>

<div class="contents row">
  <div class="information_new">
    <h2>新規投稿</h2>
    <%= form_with(model: @information, url: informations_path,local: true, class:"form") do |f|%>

      <div class="title">
        <%= f.label :title, "タイトル" %><br />
        <%= f.text_field :title, placeholder: "例：○○病院、□□幼稚園", class: "form form-title" %>
      </div>

      <div class="category">
        <%= f.label :category, "カテゴリー" %><br />
        <%= f.select :category, options_for_select(Information.categories), {prompt: "---"}, class: "form form-category"%>
      </div>

      <div class="image">
        <%= f.label :image, "ホームページ等" %><br />
        <%= f.text_field :image, placeholder: "URLを貼る", class: "form form-image" %>
      </div>

      <div class="text">
        <%= f.label :text, "情報内容" %><br />
        <%= f.text_area :text, rows: 5, placeholder: "項目に沿って記述してください", class: "form form-text" %>
      </div>

      <div class="btn">
        <%= f.submit "投稿する", class: "form form-btn"%>
      </div>
    <% end %>
  </div>
</div>
